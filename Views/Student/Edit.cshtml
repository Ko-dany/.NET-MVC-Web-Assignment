@model Student
@{
    string title = ViewBag.Action + "Student";
    ViewBag.Title = title;
}
<div class="container">
    <h2>@title</h2>
    
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="FirstName">First name</label>
            <input type="text" asp-for="FirstName" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last name</label>
            <input type="text" asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth">Date of birth</label>
            <input type="datetime" asp-for="DateOfBirth" class="form-control" value="@Model.DateOfBirth.ToString("d")"/>
        </div>
        <!-- DateTimePicker is not showing. :/ -->
        <div class="form-group">
            <label asp-for="GPA">GPA</label>
            <input type="text" asp-for="GPA" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ProgramId">Genre</label>
            <select asp-for="ProgramId" class="form-control">
                <option value="" selected>Select a program</option>
                    @foreach (Program program in ViewBag.Programs)
                    {
                    <option value="@program.ProgramId">@program.Name</option>
                    }
            </select>
        </div>

        <input type="hidden" asp-for="StudentId"/>
        <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
        <a asp-controller="Student" asp-action="List" class="btn btn-primary">Cancel</a>
    </form>

</div>
