@model Student
@{
    string title = ViewBag.Action + "Student";
    ViewBag.Title = title;
}
<div class="container">
    <h2>Confirm Deletion</h2>
    <h3>@(Model.FirstName) @(Model.LastName) (Age: @(Model.GetCurrentAge()))</h3>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="StudentId" />
        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-controller="Student" asp-action="List" class="btn btn-primary">Cancel</a>
    </form>
</div>
