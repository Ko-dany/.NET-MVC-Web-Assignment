@model List<Student>
@{
    ViewBag.Title = "All Students";
}
<div class="container">
    <h2>Student List</h2>
    <a asp-controller="Student" asp-action="Add">Add New Student</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>GPA</th>
                <th>GPA Scale</th>
                <th>Program</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.GetCurrentAge()</td>
                    <td>@student.GPA.ToString("F1")</td>
                    <td>@student.GPAScale</td>
                    <td>@student.Program.Name</td>
                    <td>
                    <a asp-controller="Student" asp-action="Edit" asp-route-id="@student.StudentId" asp-route-slug="@student.Slug">Edit</a>
                    <a asp-controller="Student" asp-action="Delete" asp-route-id="@student.StudentId" asp-route-slug="@student.Slug">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>